
<%= form_tag "/", {:method => 'get'} do %>
  <%= select_tag :state, options_for_select(@states) %>
  <%= submit_tag %>
<% end %>

<br /><br />
<hr>

<% if @reps %>
<b>Representatives (by district):</b><br />
  <% @reps.each do | cid, name | %>
      <%= link_to "#{name[0]} (#{name[1]})", rep_path(cid) %><br />
    <% end %>
<% end %>
<br />
<% if @sens %>
<b>Senators:</b><br />
  <% @sens.each do | cid, name | %>
      <%= link_to "#{name[0]} (#{name[1]})", rep_path(cid) %><br />
    <% end %>
<% end %>
