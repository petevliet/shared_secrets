<%= simple_form_for @tweet, url: user_tweets_path(current_user) do |f| %>
  <%= f.collection_radio_buttons :tweet_text, [[@tweet_1.to_sym, @tweet_1] ,[false, 'This is tweet number two.'], [false, 'This is a third tweet.']], :first, :last %>
  <%= f.button :submit %>
<% end %>


